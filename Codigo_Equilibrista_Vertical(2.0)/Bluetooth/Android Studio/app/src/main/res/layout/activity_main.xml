<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonConexao"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/button_borda_superior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conectar" />

    <ImageView
        android:id="@+id/imageViewCima"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamanho_seta"
        android:layout_marginTop="@dimen/button_borda_superior"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:contentDescription="@string/todo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewEsquerda"
            android:layout_height="@dimen/tamanho_seta"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:rotation="270"
            android:layout_marginTop="@dimen/button_borda_superior"
            app:srcCompat="@android:drawable/arrow_up_float" />

        <ImageView
            android:id="@+id/imageViewCentro"
            android:layout_width="0dp"
            android:layout_height="@dimen/tamanho_quadrado_centro"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/button_borda_superior_quadrado_centro"
            app:srcCompat="@android:drawable/checkbox_off_background" />

        <ImageView
            android:id="@+id/imageViewDireita"
            android:layout_height="@dimen/tamanho_seta"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:rotation="90"
            android:layout_marginTop="@dimen/button_borda_superior"
            app:srcCompat="@android:drawable/arrow_up_float" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewBaixo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamanho_seta"
        android:rotation="180"
        android:layout_marginTop="@dimen/button_borda_superior"
        app:srcCompat="@android:drawable/arrow_up_float" />


</LinearLayout>